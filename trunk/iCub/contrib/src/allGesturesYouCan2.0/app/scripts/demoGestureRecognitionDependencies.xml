
<application>
<name>Demo Gesture Recognition Dependencies</name>

		<module>
			<name>speechRecognizer</name>
			<node>icub-win1</node>
			<tag>speechRecognizerTag</tag>
        </module>
		
		<module>
			<name>linearClassifierModule</name>
			<parameters>--BufferSize 1 --databaseFolder DBActions</parameters>
			<node>icub15</node>
			<tag>speechRecognizerTag</tag>
        </module>
		
		<module>
			<name>yarpview --name /disparityViewer</name>
			<node>icub16</node>
			<tag>yarpviewTag</tag>
        </module>
		
		<connection>
            <from>/GestRecognition/outImage</from>
            <to>/disparityViewer</to>
            <protocol>tcp</protocol>
        </connection>
		
		<connection>
            <from>/icub/camcalib/right/out</from>
            <to>/rightPort</to>
            <protocol>tcp</protocol>
        </connection>
		
		<connection>
            <from>/icub/camcalib/left/out</from>
            <to>/leftPort</to>
            <protocol>tcp</protocol>
        </connection>
		
		<connection>
            <from>/gest_rec/classify:rpc</from>
            <to>/linearClassifier/rpc</to>
            <protocol>tcp</protocol>
        </connection>
		
		<connection>
            <from>/gest_rec/features:o</from>
            <to>/linearClassifier/features:i</to>
            <protocol>tcp</protocol>
        </connection>
		
		<connection>
            <from>/linearClassifier/scores:o</from>
            <to>/gest_rec/scores:i</to>
            <protocol>tcp</protocol>
        </connection>
		
</application>
